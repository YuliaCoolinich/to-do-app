{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "@wemake-services/javascript"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
       "no-alert": "off",
       "multiline-ternary": [
        "warn", "always"
       ],
        "unicorn/filename-case": [
            "error",
            {
                "case": "kebabCase",
                "ignore": [
                    "src/*.js$/"
                ]
            }
         ]
    }
}
